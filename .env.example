# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/asana_db

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Asana Backend Replica
VERSION=1.0.0
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# CORS Configuration
# Use "*" for all origins, or comma-separated list: http://localhost:3000,http://localhost:8000
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
